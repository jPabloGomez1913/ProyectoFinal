@model IEnumerable<ProyectoFinal.Models.Articulo>

@{
    ViewData["Title"] = "Articulos";

}
<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Articulos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Articulo</a>
        </div>
    </div>

    <br />
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <thead>
                <tr>
                   
                    <th>Nombre de articulo</th>
                    <th>Referencia</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var articulo in Model)
                {
                    <tr>
                        <td>@articulo.Nombre</td>
                        <td>@articulo.Referencia</td>
                        <td>@articulo.Precio</td>
                        <td>@articulo.Categoria.Nombre</td>
                        <td><img src="@articulo.UrlImagen" width="200" style="border-radius:5px; border:1px solid #bbb9b9" /></td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@articulo.IdArticulo">Editar</a>
                            
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@articulo.IdArticulo">Borrar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay categorías</p>
        }
    </div>
</div>