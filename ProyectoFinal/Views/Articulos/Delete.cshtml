@model ProyectoFinal.Models.ViewModel.ArticuloVM

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-5">
    <h1>Eliminar Articulo</h1>

    <h3>Esta seguro de eliminar el registro?</h3>
    <div>
        <form asp-action="Delete">

            <!--ID del usuario como campo oculto-->
            <input type="hidden" asp-for="Articulo.IdArticulo" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row mt-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Articulo.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.Referencia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Articulo.Referencia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.Descripcion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Articulo.Descripcion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Articulo.Precio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.Categoria.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Articulo.Categoria.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Articulo.UrlImagen)
                </dt>
                <dd class="col-sm-10">
                    <div class="col-4 pt-3">
                        <img src="@Model.Articulo.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                </dd>
            </dl>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-danger d-block mx-auto"><i class="bi bi-eraser-fill"></i>Borrar Articulo</button>
            </div>
        </form>
        <a class="text-dark" asp-action="Index">Volver</a>
    </div>
</div>