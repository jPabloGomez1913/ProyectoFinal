@model ProyectoFinal.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-5">
    <h1>Eliminar Categoria</h1>

    <h3>Esta seguro de eliminar el registro?</h3>
    <div>
        <form asp-action="Delete">

            <!--ID del usuario como campo oculto-->
            <input type="hidden" asp-for="IdCategoria" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row mt-3">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                </dl>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-danger d-block mx-auto"><i class="bi bi-eraser-fill"></i>Borrar Categoria</button>
            </div>
        </form>
        <a class="text-dark" asp-action="Index">Volver</a>
    </div>
</div>