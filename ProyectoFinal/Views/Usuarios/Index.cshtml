@model IEnumerable<ProyectoFinal.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";

}
<div class="container mt-5">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nueva Usuario</a>
        </div>
    </div>

    <br />
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>Documento</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Direccion</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                </tr>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Documento</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Direccion</td>
                        <td>@usuario.FechaRegistro</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@usuario.UsuarioId">Editar</a>
                            <a class="btn btn-primary text-white" asp-action="Details" asp-route-id="@usuario.UsuarioId">Detalle</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@usuario.UsuarioId">Borrar</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No hay usuarios</p>
        }
    </div>
</div>