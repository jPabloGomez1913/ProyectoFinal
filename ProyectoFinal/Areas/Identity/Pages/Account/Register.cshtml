@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}


<div class="sign_in">
    <div class="form_title">
        <h1>@ViewData["Title"]</h1>
        <p>Solo necesitaremos algunos datos tuyos y ya todo estará  listo</p>
    </div>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div>
                <label asp-for="Input.Email">Correo electrónico: </label><br />
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Nombre">Nombre completo:</label><br />
                <input asp-for="Input.Nombre" class="form-control" autocomplete="username" aria-required="true" placeholder="ingrese su nombre" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password">Contraseña:</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword">Confirmar contraseña:</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme su contraseña" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="btn_container">
                <button id="registerSubmit" type="submit" class="action_btn">Registrarse</button>
                <button onclick="btnIndex_Click()" class="action_btn negative">Volver atrás</button>
            </div>
        </div>
    </form>
