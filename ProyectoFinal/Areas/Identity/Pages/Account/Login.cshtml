@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="sign_in">
    <div class="form_title">
        <h1>@ViewData["Title"]</h1>
    </div>
    <form id="account" method="post">
        <div class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div>
                <label asp-for="Input.Email" class="form-label">Correo electrónico:</label><br />
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="form-label">Contraseña:</label><br />
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña:" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="filter" style="display: flex; justify-content:center;">
                <label asp-for="Input.RememberMe" class="form-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)&nbsp;&nbsp;
                </label>
                    <input class="form-check-input" asp-for="Input.RememberMe" />
            </div>
            <div class="btn_container">
                <button id="login-submit" type="submit" class="action_btn">Iniciar sesión</button>
                <button onclick="btnIndex_Click()" class="action_btn negative">Volver atrás</button>
            </div>
            <div style="text-align: center; padding-bottom: 10px;">
                <p style="padding: 10px 0;">
                    <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                </p>
                <p style="padding: 10px 0;">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como un nuevo usuario</a>
                </p>
                <p style="padding: 10px 0;">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo electrónico</a>
                </p>
            </div>
        </div>
    </form>
